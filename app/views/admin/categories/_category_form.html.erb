<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= t("create_category") %></h4>
      </div>
      <div class="panel-body">
        <%= form_for [:admin, @category] do |f| %>
          <%= render "shared/error_messages", object: f.object %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :time_limit %> (<%= t "minutes" %>)
            <%= f.number_field :time_limit, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :number_question %>
            <%= f.number_field :number_question, class: "form-control" %>
          </div>
          <%= f.submit @category.id.nil? ? t("create_category") :
              t("update_category"), class: "btn btn-primary col-md-12" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
