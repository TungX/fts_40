<tr>
  <td id="vertical">
    <%= question.content %>
  </td>
  <td id="vertical">
    <%= question.category.name %>
  </td>
  <td id="vertical">
    <p class="label label-<%= question.waiting? ? "warning" :
      "success" %>">
      <%= question.state %>
    </p>
  </td>
  <td id="vertical">
    <%= link_to admin_question_path(question) do %>
      <span class="glyphicon glyphicon-eye-open"></span>
    <% end %>
    <%= link_to admin_question_path(question),
        method: :delete, data: {confirm: t("areyousure")} do %>
      <span class="glyphicon glyphicon-trash"></span>
    <% end %>
  </td>
  <td>
    <% if question.waiting? %>
      <%= form_for [:admin, question] do |f|%>
        <%= f.hidden_field :state, value: :actived %>
        <%= f.submit t("active"),
          class: "btn btn-success" %>
      <% end %>
    <% end %>
</td>
</tr>
