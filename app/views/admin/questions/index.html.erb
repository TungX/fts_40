<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2>
      <b class="pull-left"><%= t "suggested_question" %></b>
      <%= link_to new_user_question_path(current_user),
        class: "pull-right link-text-question" do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t "new_question" %>
      <% end %>
    </h2>
    <table class="table question">
      <thead>
        <tr>
          <th class="id"><%= t "stt" %></th>
          <th class="user"><%= t "user" %></th>
          <th class="content"><%= t "question" %></th>
          <th class="subject"><%= t "subject" %></th>
          <th class="state"><%= t "state" %></th>
          <th class="action"></th>
          <th class="action-active"></th>
        </tr>
      </thead>
      <tbody>
        <% if @questions.any? %>
          <%= render @questions%>
          <tr>
            <td colspan="5">
              <%= paginate @questions %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

