<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("fts"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("help"), help_path %></li>
        <% if can? :manage, Category %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "manage" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("categories"),
                  admin_categories_path %>
              </li>
              <li>
                <%= link_to t("questions"), admin_questions_path %>
              </li>
              <li>
                <%= link_to t("exams"), admin_exams_path %>
              </li>
            </ul>
          </li>
        <% end %>
        <% unless user_signed_in? %>
          <li><%= link_to t("signup"), new_user_registration_path %></li>
          <li><%= link_to t("signin"), new_user_session_path %></li>
        <% else %>
          <li>
            <%= link_to t("contribute_questions"),
              user_questions_path(current_user) %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("setting"),
                  edit_user_registration_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t("signout"), destroy_user_session_path,
                  method: :delete %>
              </li>
            </ul>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
